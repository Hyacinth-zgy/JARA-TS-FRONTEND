  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@types/react": "^17.0.3",
    "eslint-config-prettier": "^8.1.0",
    "husky": "^6.0.0",
    "json-server": "^0.16.3",
    "lint-staged": "^10.5.4",
    "prettier": "2.2.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "lint-staged": {
    "*.{js,css,md,ts,tsx}": "prettier --write"
  },
  "msw": {
    "workerDirectory": "public"
  }
